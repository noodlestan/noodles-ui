{
  "name": "@noodlestan/noodles-ui",
  "version": "0.0.1",
  "description": "UI library framework (for SolidJS)",
  "author": "Andre Torgal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noodlestan/noodles-ui"
  },
  "workspaces": [
    "packages/catalog/**",
    "packages/core/**",
    "packages/ui-systems/**",
    "packages/support/**",
    "packages/sandbox/**"
  ],
  "private": true,
  "scripts": {
    "lint": "prettier . -c && eslint .",
    "lint:silent": "prettier . -c --log-level silent && eslint .",
    "test": "vitest --run --coverage",
    "ci": "npm run ci:core && npm run ci:support && npm run ci:solidjs && npm run ci:catalog && npm run ci:systems",
    "ci:core": "npm run ci:core:types && npm run ci:core:resources && npm run ci:core:entities && npm run ci:core:diagnostics && npm run ci:core:compiler-types && npm run ci:core:compiler",
    "ci:core:types": "npm run --prefix packages/core/types ci",
    "ci:core:resources": "npm run --prefix packages/core/resources ci",
    "ci:core:entities": "npm run --prefix packages/core/entities ci",
    "ci:core:diagnostics": "npm run --prefix packages/core/diagnostics ci",
    "ci:core:compiler-types": "npm run --prefix packages/core/compiler-types ci",
    "ci:core:compiler": "npm run --prefix packages/core/compiler ci",
    "ci:support": "npm run ci:support:lib-tools && npm run ci:support:sandbox-components-solid",
    "ci:support:lib-tools": "npm run --prefix packages/support/lib-tools ci",
    "ci:support:live-app": "npm run --prefix packages/support/live-app ci",
    "ci:support:sandbox-components-solid": "npm run --prefix packages/support/sandbox-components-solid ci",
    "ci:solidjs": "npm run ci:solidjs:services && npm run ci:solidjs:unstyled && npm run ci:solidjs:styled",
    "ci:solidjs:services": "npm run --prefix packages/core/services ci",
    "ci:solidjs:unstyled": "npm run --prefix packages/core/unstyled ci",
    "ci:solidjs:styled": "npm run --prefix packages/core/styled ci",
    "ci:catalog": "npm run ci:catalog:kobalte",
    "ci:catalog:kobalte": "npm run --prefix packages/catalog/kobalte ci",
    "ci:systems": "npm run ci:systems:lab-ui",
    "ci:systems:lab-ui": "npm run --prefix packages/ui-systems/lab-ui ci",
    "ci:systems:standard-ui": "npm run --prefix packages/ui-systems/standard-ui ci",
    "ci:systems:proto-ui": "npm run --prefix packages/ui-systems/proto-ui ci",
    "ci:sandbox": "npm run ci:sandbox:app-solid && npm run ci:sandbox:app-solidstart",
    "ci:sandbox:app-solid": "npm run --prefix packages/sandbox/app-solid ci",
    "ci:sandbox:app-solidstart": "npm run --prefix packages/sandbox/app-solidstart ci"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.8",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-solid": "^0.13.1",
    "lefthook": "^1.5.5",
    "prettier": "^3.2.5",
    "typescript": "5.3.3"
  }
}
