{
  "name": "@noodles-ui/core-styled",
  "version": "0.0.1",
  "description": "Noodles UI styles shared by the UI libraries",
  "author": "Andre Torgal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noodlestan/noodles-ui"
  },
  "keywords": [
    "tokens",
    "design-tokens",
    "themes",
    "design-system",
    "ui-library",
    "solid",
    "solidjs"
  ],
  "main": "./dist/index.umd.js",
  "module": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n Tests,Vite -c \"cyan.green\",\"orange.bold\" \"npm run dev:test\" \"npm run dev:watch\"",
    "dev:test": "vitest",
    "dev:watch": "vite build --watch",
    "test": "vitest --run --coverage",
    "build": "vite build"
  },
  "dependencies": {
    "@noodles-ui/core-services": "0.0.1",
    "@noodles-ui/core-types": "0.0.1",
    "@noodles-ui/core-unstyled": "0.0.1"
  },
  "peerDependencies": {
    "solid-js": "^1.8.14"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
