{
  "name": "@noodles-ui/solidjs-kobalte",
  "version": "0.0.1",
  "description": "Noodles UI library of Kobalte components for SolidJS",
  "author": "Andre Torgal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noodlestan/noodles-ui"
  },
  "keywords": [
    "tokens",
    "design-tokens",
    "themes",
    "design-system",
    "ui-library",
    "kobalte-ui",
    "solid",
    "solidjs"
  ],
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "sideEffects": false,
  "exports": {
    "import": "./src/index.ts",
    "require": "./dist/index.umd.cjs"
  },
  "scripts": {
    "dev": "concurrently -k --restart-tries -1 --restart-after 1000 -p \"[{name}]\" -n \"dev:test\",\"dev:lib\" -c \"green.bold\",\"blue.bold\" \"npm run dev:test\" \"npm run dev:lib\"",
    "dev:test": "echo 'TODO tests'",
    "dev:lib": "vite build --watch --mode development",
    "test": "echo 'TODO tests'",
    "build": "vite build",
    "ci": "rm -rf dist/ && npm run test && npm run build"
  },
  "dependencies": {
    "@noodles-ui/core-resources": "0.0.1"
  },
  "peerDependencies": {
    "@kobalte/core": "^0.12.1",
    "solid-js": "^1.8.15"
  },
  "devDependencies": {
    "vitest": "^1.3.1"
  }
}
