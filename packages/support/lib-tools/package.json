{
  "name": "@noodles-ui/lib-tools",
  "version": "0.0.1",
  "description": "Tooling for building Noodles UI libraries",
  "author": "Andre Torgal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noodlestan/noodles-ui"
  },
  "keywords": [
    "component-library",
    "ui-library",
    "design-system",
    "code-generator"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "scripts": {
    "lint": "prettier . -c && eslint . && tsc --noEmit",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project tsconfig.build.esm.json",
    "build:cjs": "tsc --project tsconfig.build.cjs.json",
    "dev": "concurrently -k -p \"[{name}]\" -n ESM,CommonJS -c \"cyan.bold\",\"yellow.bold\" \"npm run dev:esm\" \"npm run dev:cjs\"",
    "dev:esm": "tsc --watch --project tsconfig.build.esm.json",
    "dev:cjs": "tsc --watch --project tsconfig.build.cjs.json",
    "dev:tsc": "tsc --watch --project tsconfig.json "
  },
  "dependencies": {
    "@types/figlet": "^1.5.8",
    "better-queue": "^3.8.12",
    "chokidar": "^3.6.0",
    "figlet": "^1.7.0",
    "kleur": "^4.1.5",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@noodles-ui/core-types": "0.0.1",
    "@types/better-queue": "^3.8.6",
    "concurrently": "^8.2.2"
  }
}
