{
  "name": "@noodles-ui/sandbox-ui",
  "version": "0.0.1",
  "description": "Noodles UI experimenation sandbox library",
  "author": "Andre Torgal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noodlestan/noodles-ui"
  },
  "keywords": [
    "components",
    "component-library",
    "design-system",
    "themes",
    "design-tokens",
    "solid",
    "solidjs",
    "ui-library",
    "tokens"
  ],
  "main": "./dist/index.umd.js",
  "module": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "concurrently -k --restart-tries -1 --restart-after 1000 -p \"[{name}]\" -n Tests,NUI,Vite -c \"green.bold\",\"red.bold\",\"yellow.bold\" \"npm run dev:test\" \"npm run dev:nui\" \"npm run dev:library\"",
    "dev:test": "vitest",
    "dev:nui": "ts-node ./nui.watch.ts",
    "dev:library": "vite build --watch",
    "test": "vitest --run --coverage",
    "build": "npm run build:nui && npm run build:library",
    "build:nui": "ts-node ./nui.build.ts",
    "build:library": "vite build"
  },
  "dependencies": {
    "@noodles-ui/catalag-kobalte": "0.0.1",
    "@noodles-ui/core-services": "0.0.1",
    "@noodles-ui/core-styled": "0.0.1",
    "@noodles-ui/core-types": "0.0.1"
  },
  "peerDependencies": {
    "solid-js": "^1.8.14"
  },
  "devDependencies": {
    "@noodles-ui/lib-tools": "^0.0.1",
    "@types/css-modules": "^1.0.5",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2"
  }
}
